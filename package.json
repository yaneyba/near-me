{
  "name": "near-me-directory",
  "description": "Local business directory with category-specific subdomains and water refill station finder",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:wrangler": "wrangler pages dev dist --compatibility-date=2024-01-01",
    "dev:full": "npm run build && npm run dev:wrangler",
    "build": "vite build && node scripts/generate-subdomain-html.js",
    "build:seo": "node scripts/generate-subdomain-html.js",
    "build:production": "npm run build && npm run optimize:production",
    "optimize:production": "node scripts/optimize-production.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:staging": "npm run build && echo 'Deploy to staging'",
    "deploy:production": "npm run build:production && echo 'Deploy to production'",
    "migration:generate": "node scripts/generate-migration.js",
    "migration:run": "wrangler d1 execute nearme-db --remote",
    "import:businesses": "node scripts/business-importer.js",
    "subdomain:add": "node scripts/manage-subdomains.js add",
    "subdomain:remove": "node scripts/manage-subdomains.js remove",
    "subdomain:list": "node scripts/manage-subdomains.js list",
    "subdomain:cloudflare": "node scripts/manage-subdomains.js cloudflare",
    "deploy:category": "node scripts/deploy-category.js",
    "rollback:category": "node scripts/deploy-category.js rollback",
    "db:migrate": "wrangler d1 migrations apply nearme-db --remote",
    "db:backup": "wrangler d1 export nearme-db --remote",
    "db:query": "wrangler d1 execute nearme-db --remote --command"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.1",
    "stripe": "^14.20.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.3.5",
    "vitest": "^4.0.8",
    "wrangler": "^4.24.3"
  }
}
